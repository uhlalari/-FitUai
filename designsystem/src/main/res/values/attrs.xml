<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Global attribute definitions (avoid duplicates) -->
    <attr name="ds_iconSrc" format="reference" />
    <attr name="ds_titleText" format="string" />
    <attr name="ds_titleTextColor" format="color|reference" />
    <attr name="ds_cardBackgroundColor" format="color|reference" />
    <attr name="ds_ingestedText" format="string" />
    <attr name="ds_recommendedText" format="string" />
    <attr name="ds_actionIcon" format="reference" />
    <attr name="ds_secondaryTextColor" format="color|reference" />
    <attr name="ds_leftActionIcon" format="reference" />
    <attr name="ds_rightActionIcon" format="reference" />

    <!-- MealSectionCardView attributes -->
    <declare-styleable name="MealSectionCardView">
        <attr name="ds_iconSrc" />
        <attr name="ds_titleText" />
        <attr name="ds_ingestedText" />
        <attr name="ds_recommendedText" />
        <attr name="ds_actionIcon" />
        <attr name="ds_titleTextColor" />
        <attr name="ds_secondaryTextColor" />
        <attr name="ds_cardBackgroundColor" />
    </declare-styleable>

    <!-- WaterCardView attributes -->
    <declare-styleable name="WaterCardView">
        <attr name="ds_iconSrc" />
        <attr name="ds_titleText" />
        <attr name="ds_leftActionIcon" />
        <attr name="ds_rightActionIcon" />
        <attr name="ds_titleTextColor" />
        <attr name="ds_cardBackgroundColor" />
    </declare-styleable>

    <!-- StepProgressView (Design System) -->
    <attr name="ds_activeColor" format="color|reference" />
    <attr name="ds_inactiveColor" format="color|reference" />
    <attr name="ds_segmentHeight" format="dimension" />
    <attr name="ds_segmentSpacing" format="dimension" />
    <attr name="ds_cornerRadius" format="dimension" />
    <attr name="ds_animationDuration" format="integer" />
    <declare-styleable name="StepProgressView">
        <!-- API preservada -->
        <attr name="currentStep" format="integer" />
        <attr name="totalSteps" format="integer" />
        <!-- Customizações opcionais -->
        <attr name="ds_activeColor" />
        <attr name="ds_inactiveColor" />
        <attr name="ds_segmentHeight" />
        <attr name="ds_segmentSpacing" />
        <attr name="ds_cornerRadius" />
        <attr name="ds_animationDuration" />
    </declare-styleable>

    <!-- NutritionSummaryBannerView attributes -->
    <attr name="ds_goalCalories" format="integer" />
    <attr name="ds_goalProtein" format="integer" />
    <attr name="ds_goalCarbs" format="integer" />
    <attr name="ds_goalFat" format="integer" />
    <declare-styleable name="NutritionSummaryBannerView">
        <attr name="ds_titleText" />
        <attr name="ds_titleTextColor" />
        <attr name="ds_cardBackgroundColor" />
        <attr name="ds_goalCalories" />
        <attr name="ds_goalProtein" />
        <attr name="ds_goalCarbs" />
        <attr name="ds_goalFat" />
    </declare-styleable>
</resources>
