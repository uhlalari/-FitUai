<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitUai"
        tools:targetApi="31">

        <!-- Splash Screen -->
        <activity
            android:name=".presentation.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela do QuestionÃ¡rio -->
        <activity
            android:name=".presentation.activity.FormActivity"
            android:exported="true"
            android:theme="@style/Theme.FitUai" />

        <!-- Tela de Resultados -->
        <activity
            android:name=".presentation.activity.ResultsActivity"
            android:exported="true"
            android:theme="@style/Theme.FitUai" />

        <activity
            android:name=".presentation.activity.AddFoodActivity"
            android:exported="true"
            android:theme="@style/Theme.FitUai" />
        

        <activity
            android:name=".presentation.activity.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.FitUai" />
    </application>

</manifest>
